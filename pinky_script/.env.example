# ============================================================
# Pinky Sync Agent Configuration
# ============================================================

# --- Laravel API (agent ↔ server communication) ---
PINKY_API_URL=https://your-coolify-domain.com
PINKY_AGENT_KEY=your-shared-secret-here
PINKY_POLL_INTERVAL=30
PINKY_HEARTBEAT_INTERVAL=300
PINKY_AUTO_SYNC_HOUR=6

# --- MySQL Database (remote — same DB as Laravel) ---
MYSQL_HOST=your-coolify-ip
MYSQL_PORT=3306
MYSQL_USER=mysql
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=default

# --- ZKTeco Devices (local network) ---
ZKTECO_DEVICES=192.168.1.11,192.168.1.12,192.168.1.13,192.168.1.14
ZKTECO_PORT=4370
ZKTECO_TIMEOUT=15
# Force UDP protocol (required for most ZKTeco devices)
ZKTECO_FORCE_UDP=true
# Skip ping check before connecting (helps with firewall issues)
ZKTECO_OMMIT_PING=true
